---
const companyDetails = {
  name: 'Pinelab Studio',
  street: 'Cornelis Trooststraat 48',
  postalCode: '8932 BR',
  city: 'Leeuwarden',
  country: 'The Netherlands',
  chamberOfCommerce: '94997713',
  vatId: 'NL002345678B01',
};
const contacts = [
  {
    firstName: 'Martijn',
    lastName: 'van de Brug',
    email: 'Martijn@pinelab.studio',
  },
];
const navigation = {
  pages: [
    { name: 'Home', href: '/' },
    { name: 'Plugins', href: '/#plugins' },
  ],
  resources: [
    { name: 'Recipes', href: 'https://pinelab.studio/recipes/' },
    { name: 'Pinelab.studio', href: 'https://pinelab.studio/' },
  ],
  social: [
    ...contacts.map((contact) => ({
      name: contact.email,
      href: `mailto:${contact.email}`,
    })),
    {
      name: 'LinkedIn',
      href: 'https://www.linkedin.com/company/pinelab-studio',
    },
    {
      name: 'GitHub',
      href: 'https://github.com/Pinelab-studio/',
    },
  ],
};
---

<footer class="bg-swamp-950">
  <div class="mx-auto max-w-7xl px-6 pt-16 pb-8 sm:pt-24 lg:px-8 lg:pt-32">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8">
      <div class="space-y-8">
        <img
          class="h-9 w-9"
          src="/pinelab-sticker.webp"
          alt="Pinelab.studio"
          loading="lazy"
          width="313"
          height="294"
        />
        <!-- <p class="text-sm/6 text-balance text-gray-300">
          Creating customizable webshops with Vendure
        </p> -->
        <p class="text-sm/6 text-gray-400">
          {companyDetails.name}
          <br />
          {companyDetails.street}, {companyDetails.postalCode}
          <br />
          {companyDetails.city},
          {companyDetails.country}
          <br /><br />
          CoC {companyDetails.chamberOfCommerce}
          <br />
          VAT {companyDetails.vatId}
        </p>
      </div>
      <div class="mt-16 grid grid-cols-2 gap-8 xl:col-span-2 xl:mt-0">
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div>
            <h3 class="text-sm/6 font-semibold text-white">Contact</h3>
            <ul role="list" class="mt-6 space-y-4">
              {
                navigation.social.map((item) => (
                  <li>
                    <a href={item.href} class="text-sm/6 text-gray-400">
                      {item.name}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
          <div class="mt-10 md:mt-0">
            <h3 class="text-sm/6 font-semibold text-white">Pages</h3>
            <ul role="list" class="mt-6 space-y-4">
              {
                navigation.pages.map((item) => (
                  <li>
                    <a
                      href={item.href}
                      class="text-sm/6 text-gray-400 hover:text-white"
                    >
                      {item.name}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div>
            <h3 class="text-sm/6 font-semibold text-white">Resources</h3>
            <ul role="list" class="mt-6 space-y-4">
              {
                navigation.resources.map((item) => (
                  <li>
                    <a
                      href={item.href}
                      target="_blank"
                      class="text-sm/6 text-gray-400 hover:text-white"
                    >
                      {item.name}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-16 border-t border-white/10 pt-8 sm:mt-20 lg:mt-24">
      <p class="text-sm/6 text-gray-400">
        &copy; Your trusted partner in ecommerce since 2021
      </p>
    </div>
  </div>
</footer>
