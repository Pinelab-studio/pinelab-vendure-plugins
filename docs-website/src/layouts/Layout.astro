---
import Footer from '../components/Footer.astro';
import { Navigation } from '../components/Navigation.tsx';
import '../styles/global.css';
import '@fontsource/ubuntu-sans';
// import ubuntuSans500 from "@fontsource/ubuntu-sans/files/ubuntu-sans-latin-500-normal.woff2?url";
// import ubuntuSans600 from "@fontsource/ubuntu-sans/files/ubuntu-sans-latin-600-normal.woff2?url";

interface Props {
  metaTitle: string;
  metaDescription: string;
}
const { metaDescription, metaTitle } = Astro.props;
const ogImage = `${Astro.site}ogimage.png`;

let canonical = String(Astro.site);
if (Astro.url.pathname !== '/') {
  // Replace first slash
  const path = Astro.url.pathname.replace('/', '');
  // Append path to canonical
  canonical = `${Astro.site}${path}`;
}
const fullTitle = `${metaTitle} - Pinelab Plugins`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/pinelab-sticker.webp" />
    <meta name="generator" content={Astro.generator} />
    <!-- meta tags -->
    <title>{fullTitle}</title>
    <meta name="description" content={metaDescription} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={Astro.site} />
    <link rel="canonical" href={canonical} />

    <!-- <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={ubuntuSans600}
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={ubuntuSans500}
      crossorigin="anonymous"
    /> -->

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-1W9ZRN5898"
    ></script></head
  >
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag() {
      dataLayer.push(arguments);
    }
    gtag('js', new Date());

    gtag('config', 'G-1W9ZRN5898', {
      anonymize_ip: true,
      storage: 'none',
      client_storage: 'none',
    });
  </script>
  <body class="flex min-h-screen flex-col text-gray-800">
    <Navigation client:media="(width <= 64rem)" />

    <main class="flex-1">
      <slot />
    </main>

    <Footer />
  </body>
  <!--  Make navbar white after scroll -->
  <script is:inline>
    window.addEventListener('scroll', () => {
      if (window.scrollY > 200) {
        document.body.classList.add('scrolled');
      } else {
        document.body.classList.remove('scrolled');
      }
    });
  </script>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
  }
</style>
